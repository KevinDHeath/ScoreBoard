@inherits LayoutComponentBase

<div id="top" class="page">
  <main>
    <div class="top-row px-4">
      <div class="level is-mobile">
        <div class="level-left">
          <div class="level-item pt-3">
            <div class="navbar-brand">Grass</div>
          </div>
        </div>
        <div class="level-center">
          <div class="level-item mb-4">
            <SectionOutlet SectionId="MessageSection" />
          </div>
        </div>
        <div class="level-right">
          <div class="level-item mb-4 game-datetime">
            <SectionOutlet SectionId="DateSection" />
          </div>
        </div>
      </div>
    </div>
    <nav class="breadcrumb my-1 px-2" role="navigation">
      <ul>
        <li><a href="https://kevindheath.github.io/score" target="_docs">Docs</a></li>
        <li><a href="/">Game</a></li>
      </ul>
    </nav>
    <hr style="margin-top: 10px; margin-bottom: 10px; border-top: 1px solid white;" />
    <article class="content px-4">
      @Body
    </article>
  </main>
</div>

